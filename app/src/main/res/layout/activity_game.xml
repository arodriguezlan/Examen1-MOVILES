<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Columna izquierda: Información del Jugador -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start"
        android:paddingEnd="16dp">

        <!-- Título del Juego -->
        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juego de Apuestas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador: Nombre"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/playerAvailableFunds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto Disponible: ₡2,000,000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />


        <EditText
            android:id="@+id/betAmountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monto de la apuesta"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- LinearLayout para los dados -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="14dp"> <!-- Espacio entre el último elemento y los dados -->

            <ImageView
                android:id="@+id/dadouno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dadouno" />

            <ImageView
                android:id="@+id/dadodos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dadodos" />

            <ImageView
                android:id="@+id/dadotres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dadotres" />

        </LinearLayout>

        <Spinner
            android:id="@+id/betBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <!-- Columna central: Opciones de Apuesta -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca tu Apuesta:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/betRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"> <!-- Puede ser horizontal si prefieres -->

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Aquí puedes seguir añadiendo más opciones de apuestas -->
                <RadioButton
                    android:id="@+id/bet_option_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_columnWeight="1" />

                <RadioButton
                    android:id="@+id/bet_option_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_columnWeight="1" />

                <RadioButton
                    android:id="@+id/bet_option_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:layout_columnWeight="1" />

                <RadioButton
                    android:id="@+id/bet_option_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_columnWeight="1" />

                <RadioButton
                    android:id="@+id/bet_option_13"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:layout_columnWeight="1" />

                <RadioButton
                    android:id="@+id/bet_option_17"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:layout_columnWeight="1" />
                <RadioButton
                    android:id="@+id/bet_option_18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:layout_columnWeight="1" />
            </GridLayout>
        </RadioGroup>


        <Button
            android:id="@+id/rollDiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lanzar Dados" />

    </LinearLayout>

    <!-- Columna derecha: Estado del Juego -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gameResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Resultado: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/playerFundsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fondo de Apuestas: ₡0" />


        <ImageView
            android:id="@+id/resultEmoji"
            android:layout_width="91dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:contentDescription="Resultado de la apuesta"
            android:scaleType="fitCenter"
            android:src="@mipmap/happy_emoji"
            android:visibility="invisible"
            tools:srcCompat="@tools:sample/avatars[3]" /> <!-- Cambié 'gone' por 'invisible' -->

        <ImageView
            android:id="@+id/resultEmoji1"
            android:layout_width="91dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:contentDescription="Resultado de la apuesta"
            android:scaleType="fitCenter"
            android:src="@mipmap/sad_emoji"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
